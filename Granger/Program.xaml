                                    c:ControlsHelper.FocusBorderThickness="0"
                                    c:ControlsHelper.MouseOverBorderBrush="Transparent"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    Click="Selected_Click"
                                    Focusable="False"
                                    IsChecked="{Binding Selected}">
