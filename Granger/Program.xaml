                            <DataTrigger Binding="{Binding Progress.Master}" Value="True">
                                <Setter Property="IsEnabled" Value="False" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Developer.Master.Enabled}" Value="False">
                                <Setter Property="IsEnabled" Value="False" />
