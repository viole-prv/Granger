                                                                    </DrawingImage.Drawing>
                                                                </DrawingImage>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Selected}" Value="True">
                                                        <Setter Property="Source">
                                                            <Setter.Value>
