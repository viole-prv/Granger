                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding Setup.Date.Launch, ConverterCulture={x:Static g:CultureInfo.InstalledUICulture}, StringFormat=G}"
                                    TextWrapping="Wrap">
                                    <TextBlock.Style>
                                        <Style BasedOn="{StaticResource TextBlock}" TargetType="{x:Type TextBlock}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.Sandbox, ElementName=MetroWindow}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <Image
                                    Width="18"
                                    Height="18"
                                    Margin="0,0,6,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    DataContext="{Binding Setup}">
                                    <Image.Style>
                                        <Style TargetType="{x:Type Image}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.Type, ElementName=MetroWindow}" Value="CSGO">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding DataContext.Sandbox, ElementName=MetroWindow}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Configured}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
