                    </TabItem.HeaderTemplate>
                    <Grid Margin="0,5,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <ListView
                                MaxHeight="125"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top"
                                BorderThickness="0"
                                IsTabStop="False"
                                ItemsSource="{Binding Config.Audit}"
                                SelectionMode="Single"
                                VirtualizingPanel.IsVirtualizing="True"
                                VirtualizingPanel.VirtualizationMode="Recycling">
                                <ListView.ItemContainerStyle>
                                    <Style BasedOn="{StaticResource ListViewEmpty}" TargetType="{x:Type ListViewItem}">
                                        <Setter Property="Focusable" Value="False" />
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="190" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                MaxWidth="180"
                                                HorizontalAlignment="Left"
                                                Foreground="MediumPurple"
                                                Text="{Binding Name}"
                                                TextTrimming="WordEllipsis"
                                                TextWrapping="NoWrap"
                                                ToolTip="{Binding Name}"
                                                ToolTipService.IsEnabled="{Binding Name, Converter={StaticResource StringToBooleanConverter}}">
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                                        <i:InvokeCommandAction Command="{Binding OnClick}" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </TextBlock>
                                            <Grid Grid.Column="1" HorizontalAlignment="Stretch">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    Grid.Column="0"
                                                    HorizontalAlignment="Left"
                                                    Foreground="MediumPurple">
                                                    <TextBlock.Style>
                                                        <Style BasedOn="{StaticResource TextBlock}" TargetType="{x:Type TextBlock}">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding DataContext.Fee, ElementName=MetroWindow}" Value="True">
                                                                    <Setter Property="Text" Value="{Binding Receive, ConverterCulture={x:Static g:CultureInfo.CurrentCulture}, StringFormat='{}{0:C}'}" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding DataContext.Fee, ElementName=MetroWindow}" Value="False">
                                                                    <Setter Property="Text" Value="{Binding Price, ConverterCulture={x:Static g:CultureInfo.CurrentCulture}, StringFormat='{}{0:C}'}" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock
                                                    Grid.Column="2"
                                                    HorizontalAlignment="Right"
                                                    Foreground="MediumPurple"
                                                    Style="{StaticResource TextBlock}"
                                                    Text="{Binding Count}" />
                                            </Grid>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <TextBlock
                                Margin="10,20"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Foreground="MediumPurple"
                                Text="Тут будет находится список полученных предметов."
                                TextAlignment="Center"
                                TextWrapping="Wrap">
                                <TextBlock.Style>
                                    <Style BasedOn="{StaticResource TextBlock}" TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Config.Storage.Count, Converter={StaticResource IntegerToVisibilityConverter}}" Value="Visible">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                        <StackPanel Grid.Row="2" VerticalAlignment="Center">
                            <StackPanel.Style>
                                <Style TargetType="{x:Type StackPanel}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Config.Revise}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <TextBlock
                                Margin="5,0,0,0"
                                Foreground="LightGray"
                                Visibility="{Binding Config.Storage.Count, Converter={StaticResource IntegerToVisibilityConverter}}">
                                <TextBlock.Text>
                                    <MultiBinding Mode="OneWay" StringFormat="{}Статистика: {0} ({1:C})">
                                        <Binding Path="Config.Revise.Item1" />
                                        <Binding ConverterCulture="{x:Static g:CultureInfo.CurrentCulture}" Path="Config.Revise.Item2" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </StackPanel>
        <Grid Background="White" DataContext="{Binding Progress.Master}">
            <Grid.Style>
                <Style TargetType="{x:Type Grid}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding .}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <c:ProgressRing IsActive="{Binding .}" Visibility="{Binding ., Converter={StaticResource BooleanToVisibilityConverter}}">
                <c:ProgressRing.Style>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding .}" Value="True">
                                <Setter Property="UIElement.Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </c:ProgressRing.Style>
            </c:ProgressRing>
        </Grid>
    </Grid>
</c:MetroWindow>
